                    // Password
                    span.input-item
                        i.fa.fa-key
                    // Password Input
                    input#pwd.form-input(type='password' placeholder='Password' name='password' required='')
                    // Show/hide password
                    span
                        i#eye.fa.fa-eye(aria-hidden='true' type='button')
                    br
                    // Password write again
                    span.input-item
                        i.fa.fa-key
                    // Password write again
                    input#pwdrt.form-input(type='password' placeholder='Password Retype' name='passwordretype' required='')
                    // Show/hide password
                    span
                        i#eye_two.fa.fa-eye(aria-hidden='true' type='button')
                    br
                    // buttons
                    // button sign-up
                    button.sign-up  Register  
                .other
                    // Sign Up button
                    button.btn.submits.login
