            // con = Container  for items in the form
            .con
                // Start  header Content
                header.head-form
                    h2 Sign Up
                    // A welcome message or an explanation of the login form
                    p Register your account
                // End  header Content
                br
                .field-set
                    // user name
                    span.input-item
                        i.fa.fa-user-circle
                    // user name Input
                    input#txt-input.form-input(type='text' placeholder='UserName' required='')
